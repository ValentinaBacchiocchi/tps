<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <title>Elenco Persone</title>
  <style>
    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #444;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #eee;
    }
  </style>
</head>
<body>
  <h2 style="text-align: center;">Elenco Persone</h2>
  <div id="tabella-container"></div>

  <script src="script.js"></script>
</body>
</html>
function caricaPersone() {
  const xhr = new XMLHttpRequest();
  xhr.open("GET", "persone.json", true);

  xhr.onload = function () {
    if (xhr.status === 200) {
      const persone = JSON.parse(xhr.responseText);
      creaTabella(persone);
    } else {
      console.error("Errore nel caricamento del file JSON");
    }
  };

  xhr.onerror = function () {
    console.error("Errore nella richiesta HTTP");
  };

  xhr.send();
}

function creaTabella(persone) {
  const container = document.getElementById("tabella-container");

  let html = `<table>
                <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Cognome</th>
                    <th>Indirizzo</th>
                    <th>Città</th>
                    <th>CAP</th>
                  </tr>
                </thead>
                <tbody>`;

  persone.forEach(persona => {
    html += `<tr>
               <td>${persona.nome}</td>
               <td>${persona.cognome}</td>
               <td>${persona.indirizzo}</td>
               <td>${persona.città}</td>
               <td>${persona.cap}</td>
             </tr>`;
  });

  html += `</tbody></table>`;
  container.innerHTML = html;
}
window.onload = caricaPersone;
